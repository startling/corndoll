# -*- mode: makefile -*-
BOOT_OBJ=boot/start.o boot/protected.o boot/vga.o

boot/all: boot/boot.bin

boot/clean:
	rm -rf $(BOOT_OBJ) boot/boot.bin

boot/boot.bin: $(BOOT_OBJ)
	$(LD) -T boot/link.ld $^ -o $@

boot/%.o: boot/src/%.asm
	$(AS) $(ASFLAGS) $^ -o $@

boot/%.o: boot/src/%.c
	$(CC) $(CFLAGS) $^ -o $@
